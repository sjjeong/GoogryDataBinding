<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.googry.googrydatabinding.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnExam1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BaseActivity" />

        <Button
            android:id="@+id/btnExam2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ButterKnifeActivity" />

        <Button
            android:id="@+id/btnExam3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DataBindingActivity" />
    </LinearLayout>

</LinearLayout>
